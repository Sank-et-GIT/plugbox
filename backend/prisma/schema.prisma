datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Charger {
  id        Int      @id @default(autoincrement())
  name      String
  lat       Float
  lng       Float
  status    String
  lastSeen DateTime?
  createdAt DateTime @default(now())

  bookings  Booking[]
}

enum BookingStatus {
  HOLD
  EXPIRED
  CANCELLED
  STARTED
}

model Booking {
  id         Int           @id @default(autoincrement())
  chargerId  Int
  userId     String
  status     BookingStatus @default(HOLD)

  createdAt  DateTime      @default(now())
  expiresAt  DateTime
  updatedAt  DateTime      @updatedAt

  charger    Charger       @relation(fields: [chargerId], references: [id])

  @@index([chargerId])
  @@index([userId])
}
